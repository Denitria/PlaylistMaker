<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Контейнер для пунктов меню -->
    <style name="BoxForMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/size_16dp</item>
        <item name="android:paddingEnd">@dimen/right_padding</item>
        <item name="android:paddingTop">@dimen/up_padding</item>
        <item name="android:paddingBottom">@dimen/size_28dp</item>
    </style>
    <!-- Стили меню настроек -->
    <style name="StyleMenuSettings" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/height</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconSize">@dimen/padding_24dp</item>
    </style>
    <!-- стиль переключателя-->
    <style name="Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/height</item>
        <item name="android:textColor">@color/white</item>
        <item name="thumbTint">@color/yp_blue</item>
        <item name="trackTint">@color/yp_blue_light</item>
    </style>
    <!-- Цвет текста настроек -->
    <style name="TextTitleSettings">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Цвет иконки настроек -->
    <style name="IconTitleSettings" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="iconTint">@color/white</item>
        <item name="android:backgroundTint">@color/yp_black</item>
    </style>
    <!--Линия поиска-->
    <style name="LineSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal">@dimen/size_16dp</item>
        <item name="android:layout_marginVertical">@dimen/size_8dp</item>
        <item name="android:drawablePadding">@dimen/size_8dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingHorizontal">@dimen/size_8dp</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@drawable/line_search_dark</item>
        <item name="drawableTint">@color/yp_black</item>
        <item name="android:textColorHint">@color/yp_black</item>
    </style>
    <!-- Кнопка очистки -->
    <style name="ClearButton">
        <item name="tint">@color/yp_black</item>
        <item name="android:background">@color/white</item>
    </style>
    <!-- Список треков -->
    <style name="NameTrack">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>
    <style name="SubTitleStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Ellipse">
        <item name="tint">@color/white</item>
    </style>
    <style name="ArrowForward">
        <item name="tint">@color/white</item>
    </style>
    <style name="TextColor">
        <item name="android:textColor">@color/white</item>
    </style>
    <!--Кнопка обновить-->
    <style name="RefreshButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingBottom">@dimen/size_8dp</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/size_48dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <!-- "Вы искали" -->
    <style name="YouSearch">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Аудио -->
    <style name="AudioTextGray">
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:layout_marginEnd">@dimen/size_10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="AudioTextBlack">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="BackButton">
        <item name="tint">@color/white</item>
    </style>
    <style name="AudioTitleTextBlack">
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constrainedWidth">true</item>
    </style>
</resources>