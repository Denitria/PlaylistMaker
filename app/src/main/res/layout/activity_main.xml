<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.PlaylistMaker"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height"
        android:layout_marginStart="@dimen/size_4dp"
        android:layout_marginTop="@dimen/size_4dp"
        android:layout_marginBottom="@dimen/size_4dp"
        android:paddingStart="@dimen/size_12dp"
        android:paddingTop="@dimen/size_10dp"
        android:paddingBottom="@dimen/size_12dp"
        android:paddingEnd="@dimen/padding_96"
        android:fontFamily="@font/ys_display_medium"
        android:gravity="center_vertical"
        android:text="@string/playlist_maker"
        android:textSize="@dimen/text_size"
        android:textColor="@color/white"
        tools:ignore="RtlSymmetry">
    </TextView>

    <LinearLayout
        style="@style/BoxForMenu">
        <Button
            android:id="@+id/buttonSearch"
            style="@style/StyleButton"
            android:text="@string/search_button"
            app:icon="@drawable/icon_search">
        </Button>
        <Button
            android:id="@+id/buttonMediateka"
            style="@style/StyleButton"
            android:text="@string/mediateka_button"
            app:icon="@drawable/icon_mediateka">
        </Button>
        <Button
            android:id="@+id/buttonSettings"
            style="@style/StyleButton"
            android:text="@string/settings_button"
            app:icon="@drawable/icon_settings">
        </Button>
    </LinearLayout>

</LinearLayout>