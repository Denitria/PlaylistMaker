<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_52dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="@dimen/size_52dp"
            android:layout_height="@dimen/size_48dp"
            android:layout_marginStart="@dimen/size_4dp"
            android:padding="@dimen/size_12dp"
            app:icon="@drawable/icon_back"
            style="@style/IconTitleSettings">
        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/ys_display_medium"
            android:paddingStart="@dimen/size_4dp"
            android:paddingTop="@dimen/size_12dp"
            android:text="@string/settings_button"
            android:textAllCaps="false"
            style="@style/TextTitleSettings"
            android:textSize="@dimen/text_size"
            tools:ignore="RtlSymmetry"/>
    </LinearLayout>

    <LinearLayout
        style="@style/BoxForMenu">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchTheme"
            android:text="@string/dark_theme"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="@dimen/text_size_16"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            style="@style/Switch"/>
        <TextView
            android:id="@+id/buttonShare"
            style="@style/StyleMenuSettings"
            android:text="@string/share"
            app:drawableEndCompat="@drawable/icon_share"/>
        <TextView
            android:id="@+id/buttonSupport"
            style="@style/StyleMenuSettings"
            android:text="@string/support"
            app:drawableEndCompat="@drawable/icon_support"/>
        <TextView
            android:id="@+id/termsOfUse"
            style="@style/StyleMenuSettings"
            android:text="@string/terms"
            app:drawableEndCompat="@drawable/icon_terms_of_use"/>
    </LinearLayout>

</LinearLayout>